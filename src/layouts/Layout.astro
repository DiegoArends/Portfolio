---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title = "Mi Portfolio", description = "Portafolio personal construido con Astro y Tailwind CSS" } = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
                    <link rel="icon" type="image/svg+xml" href="/favicon-code.svg?v=3" />
                <link rel="icon" type="image/png" href="/favicon-code.svg?v=3" />
                <link rel="shortcut icon" href="/favicon-code.svg?v=3" />
                <link rel="apple-touch-icon" href="/favicon-code.svg?v=3" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="min-h-screen bg-neutral-950 text-neutral-100 antialiased">
                    <Header />
                <main class="mx-auto max-w-4xl px-4 py-6">
                  <slot />
                </main>
                <Footer />
              </body>
  
</html>

<style>
html {
  font-family: system-ui, sans-serif;
}
</style>